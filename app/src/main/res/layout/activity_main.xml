<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.cepheuen.elegantnumberbuttonsample.MainActivity">

    <TextView
        android:id="@+id/text_view"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/number_button"
        android:text="Hello World!" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_button"
        android:layout_width="200dp"
        app:backGroundColor="@color/colorPrimary"
        app:textSize="8sp"
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/number_button2"
        android:layout_height="wrap_content"
        tools:ignore="SmallSp" />

    <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
        android:id="@+id/number_button2"
        android:layout_width="match_parent"
        app:backGroundColor="@color/colorAccent"
        app:textSize="8sp"
        app:initialNumber="10"
        app:finalNumber="20"
        android:layout_centerInParent="true"
        android:layout_height="wrap_content"
        tools:ignore="SmallSp" />

    <Button
        android:id="@+id/demo_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Change Colors"
        android:layout_marginTop="58dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/number_button2"
        tools:ignore="HardcodedText" />
</RelativeLayout>
